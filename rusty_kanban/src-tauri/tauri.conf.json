{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "rusty_kanban",
  "version": "0.1.0",
  "identifier": "com.rusty_kanban.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "rusty_kanban",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/RustyKanban.ico"
    ]
  }
}
